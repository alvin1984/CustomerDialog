<resources>

    <style name="Base.Library.Dialog.Fullscreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>

    <style name="Base.Library.Dialog.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/base_library_dialog_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/base_library_dialog_slide_out_bottom</item>
    </style>

</resources>
